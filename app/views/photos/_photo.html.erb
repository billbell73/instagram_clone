

<div class='col-md-4 photo'>
  <h3><%= photo.caption %></h3>
  
  <%= link_to photo_path(photo) do %>
    <%= image_tag(photo.pic.url(:medium), class: 'uploaded-pic') %>
  <% end %>
  <br>
  <caption>Uploaded by <%= photo.user.email if photo.user %></caption>
  <br>
    <%= button_to "❤", photo_likes_path(photo), class: 'like-button', remote: true %>


  <div class="like-section" data-id="<%= photo.id %>">
    <% photo.likes.each do |like | %>
      <div class="like-email" data-id="<%= like.id %>">
        <%= like.user.email %>
      </div>
    <% end %>
  </div>

  <br>
  	Tags:
      <%= tag_names(photo) %>
  <br>

  <%= link_to 'Add Tag', new_photo_tag_path(photo), class: "foot" %>

  <%= link_to "Photo location", photo_path(photo), class: "foot" %>

  <%= link_to "Buy Print", new_photo_charge_path(photo), class: "foot" %>

</div>

